<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<%= search_form_for @q do |form| %>

  <div class="input-group mb-4"> 
    <div class="form-group mx-2">
      <strong> <%= form.label :description_or_title_cont  %> </strong>
      <%= form.text_field :description_or_title_cont %>
    </div>
    <div class="form-group mx-2">
      <strong>Deadline </strong>
      <div style=="display:flex">
        <%= form.date_field :deadline_gteq %>
        to
        <%= form.date_field :deadline_lteq %>
      </div>
    </div>
    
    <%  status=["todo","doing","done"] %>
    <%= form.label :status, 'Statut' %>
    <div style="display:flex">
      <%= form.radio_button :status, nil, checked: true %>
      <%= form.label :status, 'Non renseignÃ©' %>
      <% status.each do |s| %>
        <%= form.radio_button :status, s %>
        <%= form.label :status, s %>
      <% end %>
    </div>
  </div>
  <%= form.submit "Search", class: 'btn btn-outline-primary mr-2',id:'search_task' %> 
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Status</th>
      <th><%= sort_link(@q, :deadline, 'Deadline', default_order: :desc) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.deadline.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

